head
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
	meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
	title= page.title
	meta(name='description' content=page.description)
	if page.keywords
		meta(name='keywords' content=page.keywords)
	meta(name='author' content='Sávio Mendes')

	link(rel='stylesheet' href='css/driblesfifa.min.css')
	link(rel='shortcut icon' href=site.url + 'img/favicon.png')
	link(rel='apple-touch-icon' href=site.url + 'img/apple-touch-icon.png')

	//- android meta tags
	meta(name='mobile-web-app-capable' content='yes')

	//- twitter meta tags
	if site.twitter
		meta(name='twitter:card' content='summary')
		meta(name='twitter:site' content=site.twitter)
		meta(name='twitter:title' content=site.name + ' » ' + page.title)
		meta(name='twitter:description' content=page.description)
		meta(name='twitter:image:src' content=site.url + 'app/img/icon-256.png')

	//- open graph meta tags
	if site.fbadmins
		meta(property='og:title' content=site.name + ' » ' + page.title)
		meta(property='og:site_name' content=site.name)
		meta(property='og:description' content=page.description)
		meta(property='og:image' content=site.url + 'app/img/icon-256.png')
		meta(property='og:url' content=site.url + page.path)
		meta(property='og:type' content='website')
		meta(property='fb:admins' content=site.fbadmins)

	//- windows meta tags
	meta(name='msapplication-TileImage' content='img/favicon.png')
	meta(name='msapplication-TileColor' content='#fff')

	script.
		// google analytics
		if (location.search.indexOf('a=0') === -1){
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', #{site.googleAnalyticsUA}]);
			_gaq.push(['_trackPageview']);
			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		};
