mixin movements(movements)
	each movement in movements
		.movement.mb-3.p-3.js-movement(data-new=movement.new, data-type=movement.type)
			if movement.name.en
				h2.movement__name
					= movement.name.en
					.movement__name-pt= movement.name.pt
			else
				h2.movement__name!= movement.name
			.text-right!= movement.command
			span.badge.badge-default= movement.type
			if movement.new
				span.badge.badge-default.ml-1= 'Novo'
